@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zh">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>玩几天运营管理后台</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link href="../../Content/css/login.css" rel="stylesheet" type="text/css" />
    <link href="../../Content/plugins/easyui/themes/gray/easyui.css" rel="stylesheet" type="text/css" />
    <link href="../../Content/plugins/easyui/themes/icon.css" rel="stylesheet" type="text/css" />
    <link href="../../Content/plugins/easyui/themes/color.css" rel="stylesheet" type="text/css" />

    <script src="../../Content/plugins/jquery-1.11.2.min.js" type="text/javascript"></script>
    <script src="../../Content/plugins/knockout-3.3.0.js" type="text/javascript"></script>
    <script src="../../Content/plugins/layer/layer.js" type="text/javascript"></script>
    <script src="../../Content/plugins/easyui/jquery.easyui.min.js" type="text/javascript"></script>

    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
</head>
<body class="loginbg" id="logindiv" data-bind="event: { keydown: enterpress }">
    <div class="top_div">
    </div>
    <div style="background: rgb(255, 255, 255); margin: -100px auto auto; border: 1px solid rgb(204, 204, 204);
        border-image: none; width: 400px; height: 200px; text-align: center;">
        <div style="width: 165px; height: 96px; position: absolute;">
            <div class="tou">
            </div>
            <div class="initial_left_hand" id="left_hand">
            </div>
            <div class="initial_right_hand" id="right_hand">
            </div>
        </div>
        <p style="padding: 30px 0px 10px; position: relative;">
            <span class="u_logo"></span>
            <input class="ipt" type="text" placeholder="请输入用户名或邮箱" id="username" value="">
        </p>
        <p style="position: relative;">
            <span class="p_logo"></span>
            <input class="ipt" id="password" type="password" placeholder="请输入密码" value="">
        </p>
        <div style="height: 50px; line-height: 50px; margin-top: 30px; border-top-color: rgb(231, 231, 231);
            border-top-width: 1px; border-top-style: solid;">
            <p style="margin: 0px 35px 20px 45px;">
                <span style="float: left;"><a style="color: rgb(204, 204, 204);" href="javascript:void(null)">忘记密码?</a></span>
                <span style="float: right;">
                    <input class="button purple" type="button" value="登 录" data-bind="click:submit" id="btnLogin" />&nbsp;&nbsp;
                    <input class="button purple" type="button" value="重 置" data-bind="click:reset" id="btnReset" />
                </span>
            </p>
        </div>
    </div>
</body>
</html>
<script src="../../Content/viewmodel/login/login.js"></script>
<script>
    $("#username").focus();
    try {
        ko.applyBindings(new loginViewModel(), document.getElementById('logindiv'));
    } catch (e) { alert(e) }
    
</script>
